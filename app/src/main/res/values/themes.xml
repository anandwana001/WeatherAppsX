<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.WeatherAppsX" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="ForecastItem">
    <item name="fontFamily">@font/roboto</item>
    <item name="android:lineSpacingExtra">19sp</item>
    <item name="android:textColor">@color/heading</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Heading.h1" parent="Heading">
    <item name="android:textSize">96sp</item>
    <item name="android:lineSpacingExtra">112sp</item>
  </style>

  <style name="Heading">
    <item name="android:textColor">@color/heading</item>
    <item name="fontFamily">@font/roboto_black</item>
  </style>
</resources>